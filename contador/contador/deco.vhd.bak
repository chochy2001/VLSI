LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY deco IS
PORT(NUM: in INTEGER RANGE 0 to 9;
		SEG: OUT STD_LOGIC_VECTOR(7 DOWNTO 0));
END deco;

ARCHITECTURE am OF deco IS
	BEGIN
	WITH NUM SELECT
	SEG <= "00000011" WHEN 0,
			 "10011111" WHEN 1,
			 "00100101" WHEN 2,
			 "00001101" WHEN 3,
			 "10011001" WHEN 4,
			 "01001001" WHEN 5,
			 "01000001" WHEN 6,
			 "00011101" WHEN 7,
			 "00000001" WHEN 8,
			 "00001001" WHEN OTHERS;
end am;